@{
    ViewData["Title"] = "오시는 길";
}

@section Styles {
    <style>
        .map-page {
            opacity: 0;
            transition: opacity 1s ease-in;
        }

            .map-page.visible {
                opacity: 1;
            }

        .map-container {
            max-width: 1080px;
            margin: 120px auto 60px;
            padding: 0 24px;
            text-align: center;
        }

        .map-title {
            font-size: 2.4rem;
            font-weight: 400;
            margin-bottom: 40px;
        }

        #map {
            width: 100%;
            height: 500px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .divider {
            width: 80px;
            height: 2px;
            background: #000;
            margin: 60px auto 30px;
        }

        .address {
            font-size: 1.1rem;
            color: #444;
        }
    </style>
}

<section class="map-page">
    <div class="map-container">
        <h2 class="map-title">오시는 길</h2>
        <div id="map"></div>
        <div class="divider"></div>
        <p class="address">
            📍 대전 유성구 테크노1로 75<br />
            한밭대학교 대덕산학융합캠퍼스 104호
        </p>
    </div>
</section>

@section Scripts {
    <!-- 페이드인 스크립트 -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
          document.querySelector(".map-page").classList.add("visible");
        });
    </script>

    <!-- Kakao Map API 로딩 -->
    <script src="//dapi.kakao.com/v2/maps/sdk.js?appkey=@ViewBag.KakaoMapApiKey&libraries=services"></script>
    <script>
        const container = document.getElementById("map");
        const options = { center: new kakao.maps.LatLng(36.370409,127.375621), level: 3 };
        const map = new kakao.maps.Map(container, options);
        const geocoder = new kakao.maps.services.Geocoder();
        geocoder.addressSearch("대전 유성구 테크노1로 75", (res, status) => {
          if (status === kakao.maps.services.Status.OK) {
            const coords = new kakao.maps.LatLng(res[0].y, res[0].x);
            new kakao.maps.Marker({ map, position: coords });
            map.setCenter(coords);
          }
        });
    </script>
}
