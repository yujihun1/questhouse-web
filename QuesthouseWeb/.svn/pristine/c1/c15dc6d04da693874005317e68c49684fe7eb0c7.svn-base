.history-section {
    background: #fff;
}

    .history-section .timeline {
        list-style: none;
        padding-left: 0;
        max-width: 600px;
        margin: 0 auto;
    }

        .history-section .timeline li {
            position: relative;
            padding: .75rem 1rem .75rem 3rem;
            margin-bottom: 1rem;
            border-left: 3px solid #007bff;
        }

            .history-section .timeline li strong {
                display: inline-block;
                width: 60px;
                font-weight: 700;
                color: #007bff;
                margin-left: -3rem;
                position: absolute;
                left: 0;
                top: .75rem;
            }

            .history-section .timeline li::before {
                content: '';
                position: absolute;
                left: -7px;
                top: calc(.75rem + 4px);
                width: 14px;
                height: 14px;
                background: #fff;
                border: 3px solid #007bff;
                border-radius: 50%;
            }

