.notice-container {
    max-width: 720px;
    margin: 60px auto;
    padding: 0 20px;
    font-family: 'Noto Sans KR', sans-serif;
}

.notice-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
}

.notice-title {
    font-size: 28px;
    font-weight: 700;
    color: #1c1c1c;
}

.add-button {
    background-color: #000;
    color: #fff;
    padding: 10px 18px;
    font-size: 14px;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.2s ease;
}

    .add-button:hover {
        background-color: #333;
    }

.notice-table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
}

    .notice-table th,
    .notice-table td {
        padding: 16px 20px;
        font-size: 15px;
        border-bottom: 1px solid #f1f1f1;
    }

    .notice-table th {
        background-color: #fafafa;
        color: #666;
        font-weight: 500;
        text-align: left;
    }

    .notice-table tr:last-child td {
        border-bottom: none;
    }

.action-link {
    margin-right: 16px;
    color: #0070f3;
    text-decoration: none;
}

    .action-link:hover {
        text-decoration: underline;
    }

.delete-button {
    color: #e00;
    background: none;
    border: none;
    cursor: pointer;
}

    .delete-button:hover {
        text-decoration: underline;
    }

.no-underline {
    text-decoration: none;
    color: inherit; /* 기존 텍스트 색상 유지 */
}

.pagination-container {
    margin-top: 30px;
    text-align: center;
}

.pagination-link,
.pagination-current {
    display: inline-block;
    margin: 0 5px;
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 4px;
    text-decoration: none;
    border: 1px solid #ccc;
    color: #333;
}

    .pagination-link:hover {
        background-color: #f0f0f0;
    }

.pagination-current {
    background-color: #0070f3;
    color: #fff;
    border-color: #0070f3;
    cursor: default;
}
