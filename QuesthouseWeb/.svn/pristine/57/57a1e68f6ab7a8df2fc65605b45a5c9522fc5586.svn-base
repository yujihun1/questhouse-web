@model IEnumerable<QuesthouseWeb.Models.Inquiry>

@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="notice-container">
    <div class="notice-header">
        <h1 class="notice-title">문의 내역 목록</h1>
     
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            등록된 문의가 없습니다.
        </div>
    }
    else
    {
        <table class="notice-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>문의 내용(미리보기)</th>
                    <th>답변여부</th>
                    <th>상세보기</th>
                    <th>삭제</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var preview = item.Content.Length > 20
                    ? item.Content.Substring(0, 20) + "..."
                    : item.Content;
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            
                            <a asp-action="Details"
                               asp-controller="Inquiries"
                               asp-route-id="@item.Id"
                               class="preview-link">
                                @preview
                            </a>
                        </td>
                        <td>
                            @if (item.AnsYn == "Y")
                            {
                                <span class="badge bg-success">Y</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">N</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details"
                               asp-route-id="@item.Id"
                               class="action-link">
                                상세
                            </a>
                        </td>
                        <td>
                            <form asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  onsubmit="return confirm('정말 삭제하시겠습니까?');">
                                <button type="submit" class="delete-button">
                                    삭제
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script>
        // inquiry 삭제는 form POST로 처리하므로 추가 JS 불필요
    </script>
}
