                            <!-- 로그인 버튼: 둥근 모서리, 배경색, 호버 애니메이션 등 -->
                            <div>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-inquiry px-4 py-2 fixed-size-btn">
                                    로그인
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </nav>

	</header>

    <!-- ==============================
         ★ 본문 영역 (각 View 결과가 여기에 들어감)
         ============================== -->
