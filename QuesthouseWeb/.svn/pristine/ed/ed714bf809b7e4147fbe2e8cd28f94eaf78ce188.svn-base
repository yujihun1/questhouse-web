body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background-color: #ffffff;
    color: #111;
}

.page-title {
    text-align: center;
    margin-top: 60px;
    font-size: 2rem;
    font-weight: 700;
    color: #111;
}

.category-tabs {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin: 15px auto 20px;
    border-bottom: 1px solid #e0e0e0;
    max-width: 800px;
}

.category-tab {
    font-size: 1rem;
    font-weight: 600;
    padding: 12px 16px;
    cursor: pointer;
    color: #888;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
    text-decoration: none;
}

    .category-tab:hover {
        color: #0d47a1;
    }

    .category-tab.active {
        color: #0d47a1;
        border-bottom: 3px solid #0d47a1;
        text-decoration: none;
    }

.product-list {
    display: grid;
    grid-template-columns: repeat(3, 240px);
    gap: 32px;
    justify-content: center;
    padding: 40px 20px 20px;
    background-color: #fff;
}

.product-item {
    width: 240px;
    border: 1px solid #eee;
    border-radius: 16px;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 6px 12px rgba(0,0,0,0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-sizing: border-box;
}

    .product-item:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

.product-item-link {
    text-decoration: none;
    color: inherit;
    display: block;
}

.product-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    display: block;
}

.product-info {
    padding: 16px;
    text-align: center;
}

.product-name {
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 8px;
    color: #111;
}

.product-created {
    font-size: 0.85rem;
    color: #888;
}
.form-container {
    max-width: 720px;
    margin: 60px auto;
    padding: 0 20px;
    font-family: 'Noto Sans KR', sans-serif;
}

.form-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 40px;
    color: #1c1c1c;
}

.form-group {
    margin-bottom: 24px;
}

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        font-size: 15px;
        color: #444;
    }

.form-control {
    width: 100%;
    padding: 12px 14px;
    font-size: 15px;
    border: 1px solid #ddd;
    border-radius: 6px;
    box-sizing: border-box;
    transition: border-color 0.2s;
}

    .form-control:focus {
        border-color: #0070f3;
        outline: none;
    }

.save-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40px;
    border-top: 1px solid #eee;
    padding-top: 24px;
}

    .save-bar input[readonly] {
        background-color: #f9f9f9;
        border: none;
        color: #666;
    }

.submit-button {
    background-color: #000;
    color: #fff;
    padding: 12px 24px;
    font-size: 15px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s ease;
}

    .submit-button:hover {
        background-color: #333;
    }

.post-wrapper {
    max-width: 720px;
    margin: 100px auto;
    padding: 0 24px;
}

.post-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 48px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.06);
}

.post-title {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.4;
}

.post-meta {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 40px;
}

.post-section {
    margin-bottom: 24px;
    font-size: 1.125rem;
    line-height: 1.8;
}

    .post-section strong {
        display: inline-block;
        width: 100px;
        color: #555;
        font-weight: 500;
    }

.post-desc {
    margin-top: 48px;
    font-size: 1.125rem;
    line-height: 1.8;
    color: #222;
    white-space: pre-wrap;
}

.back-button {
    display: inline-block;
    margin-top: 48px;
    font-size: 1rem;
    padding: 10px 20px;
    background-color: #f2f2f2;
    color: #333;
    border-radius: 8px;
    text-decoration: none;
    transition: background-color 0.2s ease;
}

    .back-button:hover {
        background-color: #e0e0e0;
    }