@{
    ViewData["Title"] = "오시는 길";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #ffffff;
            font-family: 'Noto Sans KR', sans-serif;
            color: #222;
            line-height: 1.6;
            opacity: 0;
            transition: opacity 1s ease-in;
            opacity: 1 !important;
        }

        .container {
            max-width: 1080px;
            /* margin: 120px auto; */
            padding: 0 24px;
            text-align: center;
        }

        .title {
            font-size: 2.4rem;
            font-weight: 400;
            margin-bottom: 40px;
            margin: 120px auto;
        }

        #map {
            width: 100%;
            height: 500px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .divider {
            width: 80px;
            height: 2px;
            background-color: #000;
            margin: 60px auto 30px;
        }

        .address {
            font-size: 1.1rem;
            color: #444;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="title">오시는 길</h2>

        <div id="map"></div>

        <div class="divider"></div>

        <p class="address">
            📍 대전 유성구 테크노1로 75<br />
            한밭대학교 대덕산학융합캠퍼스 104호
        </p>
    </div>

    <!-- Kakao Map API -->
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=@ViewBag.KakaoMapApiKey&libraries=services"></script>
    <script>
        var container = document.getElementById('map');
        var options = {
            center: new kakao.maps.LatLng(33.450701, 126.570667),
            level: 3
        };
        var map = new kakao.maps.Map(container, options);

        var geocoder = new kakao.maps.services.Geocoder();

        geocoder.addressSearch('대전 유성구 테크노1로 75', function (result, status) {
            if (status === kakao.maps.services.Status.OK) {
                var coords = new kakao.maps.LatLng(result[0].y, result[0].x);
                var marker = new kakao.maps.Marker({
                    map: map,
                    position: coords
                });
                map.setCenter(coords);
            }
        });
    </script>
</body>
</html>
