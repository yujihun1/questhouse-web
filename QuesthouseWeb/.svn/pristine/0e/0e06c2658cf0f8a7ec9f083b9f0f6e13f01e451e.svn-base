@model IEnumerable<Product>

@{
    ViewData["Title"] = "제품 소개";
}

<style>
    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: center;
        padding: 40px 0;
        background-color: #ffffff;
    }

    .product-item {
        width: 220px;
        border: 1px solid #ddd;
        border-radius: 20px; /* 더 동글동글하게 */
        overflow: hidden;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        background-color: #fff; /* 흰 배경 유지 */
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }


    .product-item-link {
        text-decoration: none;
        color: inherit;
        display: inline-block;
    }

        .product-item-link * {
            text-decoration: none;
            color: inherit;
        }


        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

    .product-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        display: block;
    }

    .product-info {
        padding: 16px;
        text-align: center;
    }

    .product-name {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 6px;
        color: #222;
    }

    .product-created {
        font-size: 0.85rem;
        color: #999;
        margin-bottom: 10px;
    }

    .product-desc {
        font-size: 0.92rem;
        color: #444;
        line-height: 1.4;
    }

    .add-button {
        display: block;
        width: 180px;
        margin: 30px auto 0;
        text-align: center;
        padding: 10px 20px;
        background-color: #1a237e; /* 기본 네이비 */
        color: white;
        font-weight: bold;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .add-button:hover {
            background-color: #1565c0; /* hover 시 좀 더 밝은 블루 */
            color: white; /* 여기에 명시적으로 유지 */
            text-decoration: none;
        }



    h2.page-title {
        text-align: center;
        margin-top: 40px;
        font-size: 1.8rem;
        font-weight: 700;
        color: #222;
    }
</style>

<h2 class="page-title">제품 소개</h2>

<div class="product-list">
    @foreach (var product in Model)
    {
        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="product-item-link">
            <div class="product-item">
                @* 이미지가 있다면 여기에 표시 *@
                @* <img class="product-img" src="@product.ImageUrl" alt="@product.Name" /> *@
                <div class="product-info">
                    <div class="product-name">@product.Name</div>
                    <div class="product-created">@product.Created</div>
                </div>
            </div>
        </a>
    }

</div>

<a href="/product/add" class="add-button">게시물 작성</a>
