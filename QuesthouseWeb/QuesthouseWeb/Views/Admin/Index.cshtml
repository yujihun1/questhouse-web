@model IEnumerable<QuesthouseWeb.Models.User>
@{
	Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>회원 IP 관리</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-group {
            margin-bottom: 15px;
        }

        table thead th {
            background-color: #e9ecef;
            text-align: center;
        }

        table tbody td input {
            width: 100%;
            border: none;
            background-color: transparent;
        }

        table tbody td input:focus {
            outline: none;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>

    <script>
        function addRow() {
            const tbody = document.getElementById("empTableBody");
            const newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td class="text-center"><input type="checkbox" /></td>
                <td><input type="text" placeholder="회원 이름" /></td>
                <td><input type="text" placeholder="회원 IP" /></td>
                <td><input type="text" placeholder="회원 email" /></td>
            `;
            tbody.appendChild(newRow);
        }

        function deleteSelectedRows() {
            const tbody = document.getElementById("empTableBody");
            const checkboxes = tbody.querySelectorAll("input[type='checkbox']");
            checkboxes.forEach((checkbox) => {
                if (checkbox.checked) {
                    checkbox.closest("tr").remove();
                }
            });
		}
    </script>
</head>
<body>

    <div class="container bg-white p-4 rounded shadow-sm">
        <h5 class="mb-3">회원 관리</h5>

        <div class="btn-group mb-3">
            <button class="btn btn-outline-primary btn-sm" onclick="addRow()">추가</button>
            <button class="btn btn-outline-danger btn-sm" onclick="deleteSelectedRows()">삭제</button>
            <button class="btn btn-outline-success btn-sm">저장</button>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col"><input type="checkbox" /></th>
                    <th scope="col">회원 이름</th>
                    <th scope="col">회원 IP</th>
                    <th scope="col">회원 email</th>
                </tr>
            </thead>
            <tbody id="empTableBody">
                <tr>
                    <td class="text-center"><input type="checkbox"/></td>
                    @* <td><input type="text" asp-for="User_nm"/></td>
                    <td><input type="text" asp-for="User_ip"/></td>
                    <td><input type="text" asp-for="User_id"/></td> *@
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>